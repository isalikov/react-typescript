{
    "compilerOptions": {
        "target": "esnext",
        "strictNullChecks": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./src/typings"],
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/app/*"],
            "@lib/*": ["src/lib/*"],
            "@typings/*": ["src/typings/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
